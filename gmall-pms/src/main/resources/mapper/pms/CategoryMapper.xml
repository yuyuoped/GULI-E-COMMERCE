<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuyuoped.gmall.pms.mapper.CategoryMapper">

    <resultMap id="CategoryEntity" type="CategoryEntity" autoMapping="true">
        <id column="id" property="id" />
        <collection property="subs" javaType="List" ofType="CategoryEntity" select="queryCategoriesByPid" column="id">
        </collection>
    </resultMap>
    
    <select id="queryCategoriesByPid" resultMap="CategoryEntity">
        select * from pms_category where parent_id = #{pid};
    </select>
</mapper>
